{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "ExpirationInMinutes": 60
  },
  "OtpSettings": {
    "SecretLength": 20,
    "Step": 30,
    "Digits": 6,
    "UseTimeCorrection": false
  },
  "SecuritySettings": {
    "PasswordRequirements": {
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true,
      "RequiredLength": 8
    },
    "Lockout": {
      "MaxFailedAttempts": 5,
      "LockoutTimeInMinutes": 15
    }
  },
  "DkimSettings": {
    "Enabled": true
  }
}