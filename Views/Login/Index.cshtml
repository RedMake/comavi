@model COMAVI_SA.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
    ViewData["Title"] = "Login - Sistema Administrativo";
}

<div class="container" style="display:flex; justify-content:center; align-items:center">

    <div class="row justify-content-center" style="width: 80%;">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                        <script>
                            setTimeout(function () {
                                document.getElementById('successMessage').style.display = 'none';
                            }, 3000);
                        </script>
                    }

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Bienvenido de vuelta!</h1>
                                </div>
                                <form asp-controller="Login" asp-action="Index" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                                        <input asp-for="Email" type="email" class="form-control form-control-user" autocomplete="email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label">Contraseña</label>
                                        <input asp-for="Password" type="password" class="form-control form-control-user" autocomplete="current-password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group form-check">
                                        <div class="custom-control custom-checkbox small">
                                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheck">
                                            <label asp-for="RememberMe" class="custom-control-label" for="customCheck">
                                                Recuérdame
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group d-grid">
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Iniciar Sesión</button>
                                    </div>
                                </form>
                                <div class="text-center">
                                    <a asp-action="ForgotPassword" class="small">Olvido la contraseña?</a>
                                </div>
                                <div class="text-center">
                                    <a asp-action="Register" class="small">Crea una cuenta!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
@section Scripts {

}
