@model DashboardViewModel
@using System.Globalization
@{
    ViewData["Title"] = "Dashboard Administrativo";
}
<!-- Dashboard Header -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard Administrativo</h1>
    <a href="@Url.Action("ExportarReporteMantenimientosPDF", "Admin", new { fechaInicio = DateTime.Now.AddMonths(-1), fechaFin = DateTime.Now })" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generar Reporte
    </a>
</div>
<!-- Indicadores Cards -->
<div class="row">
    <!-- Camiones Activos -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Camiones Activos
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CamionesActivos</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-truck fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Camiones en Mantenimiento -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            En Mantenimiento
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CamionesEnMantenimiento</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tools fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Camiones Inactivos -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Camiones Inactivos
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CamionesInactivos</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-ban fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Choferes Activos -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Choferes Activos
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ChoferesActivos</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Choferes Inactivos -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-secondary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                            Choferes Inactivos
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@(@Model.TotalChoferes - @Model.ChoferesActivos)</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-times fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Licencias por Vencer -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Licencias por Vencer
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ChoferesLicenciaPorVencer</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-id-card fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Licencias Vencidas -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Licencias Vencidas
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ChoferesLicenciaVencida</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-times fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Costo de Mantenimientos Último Mes -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-dark shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
                            Costo de Mantenimiento (Último Mes)
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Model.CostoMantenimientoUltimoMes.ToString("₡ #,##0.00", CultureInfo.InvariantCulture)
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-coins fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Gráficos -->
<div class="row">
    <!-- Gráfico de Mantenimientos por Mes -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Mantenimientos por Mes</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="myAreaChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráfico de Estado de Camiones -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Estado de Camiones</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2">
                    <canvas id="myPieChart"></canvas>
                </div>
                <div class="mt-4 text-center small">
                    <span class="mr-2">
                        <i class="fas fa-circle text-primary"></i> Activos
                    </span>
                    <span class="mr-2">
                        <i class="fas fa-circle text-warning"></i> Mantenimiento
                    </span>
                    <span class="mr-2">
                        <i class="fas fa-circle text-danger"></i> Inactivos
                    </span>
                </div>
            </div>
        </div>
    </div>
    <!-- Gráfico de Estado de Documentos -->
    <div class="col-xl-6 col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Estado de Documentos</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2">
                    <canvas id="documentosChart"></canvas>
                </div>
                <div class="mt-4 text-center small">
                    <span class="mr-2">
                        <i class="fas fa-circle text-success"></i> Verificado
                    </span>
                    <span class="mr-2">
                        <i class="fas fa-circle text-warning"></i> Pendiente
                    </span>
                    <span class="mr-2">
                        <i class="fas fa-circle text-danger"></i> Rechazado
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Actividades Recientes -->
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Actividades Recientes</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Usuario</th>
                                <th>Actividad</th>
                                <th>Detalles</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Actividades != null)
                            {
                                @foreach (var actividad in ViewBag.Actividades)
                                {
                                    <tr>
                                        <td>@actividad.fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@actividad.tipo_actividad</td>
                                        <td>@actividad.descripcion</td>
                                        <td>@actividad.detalles</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">No hay actividades recientes disponibles</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Datos para los gráficos
        var mantenimientosPorMes = @Html.Raw(Json.Serialize(ViewBag.MantenimientosPorMes));
        var camionesEstados = @Html.Raw(Json.Serialize(ViewBag.CamionesEstados));
        var documentosEstados = @Html.Raw(Json.Serialize(ViewBag.DocumentosEstados));

        

    </script>
    <script src="~/js/dashboard.js"></script>
}