@model List<Documentos>
@{
    ViewData["Title"] = "Documentos del Chofer";
    var chofer = ViewBag.Chofer;
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Documentos del Chofer</h1>
    <div>
        <a href="@Url.Action("AsignarDocumentos", "Admin", new { idChofer = ViewBag.IdChofer })" class="btn btn-success btn-sm mr-2">
            <i class="fas fa-plus fa-sm"></i> Nuevo Documento
        </a>
        <a href="@Url.Action("ListarChoferes", "Admin")" class="btn btn-primary btn-sm">
            <i class="fas fa-arrow-left fa-sm"></i> Volver a Choferes
        </a>
    </div>
</div>

<!-- Alertas -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>¡Éxito!</strong> @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>¡Error!</strong> @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}

<!-- Información del Chofer -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Información del Chofer</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <p><strong>Nombre:</strong> @chofer.nombreCompleto</p>
            </div>
            <div class="col-md-4">
                <p><strong>DNI/Cédula:</strong> @chofer.numero_cedula</p>
            </div>
            <div class="col-md-4">
                <p>
                    <strong>Estado:</strong>
                    <span class="badge badge-@(chofer.estado == "activo" ? "success" : "danger")">
                        @chofer.estado
                    </span>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <p><strong>Licencia:</strong> @chofer.licencia</p>
            </div>
            <div class="col-md-4">
                <p><strong>Vencimiento Licencia:</strong> @chofer.fecha_venc_licencia.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>
</div>

<!-- Lista de Documentos -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Documentos Registrados</h6>
    </div>
    <div class="card-body">
        @if (Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="documentosTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tipo</th>
                            <th>Fecha Emisión</th>
                            <th>Fecha Vencimiento</th>
                            <th>Estado</th>
                            <th>Días Restantes</th>
                            <th>Archivo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model)
                        {
                            var diasRestantes = (doc.fecha_vencimiento - DateTime.Now).Days;
                            var estadoAlerta = diasRestantes <= 0 ? "danger" :
                            diasRestantes <= 15 ? "warning" : "success";
                            var estadoTexto = diasRestantes <= 0 ? "Vencido" :
                            diasRestantes <= 15 ? "Por vencer" : "Vigente";

                            <tr>
                                <td>@doc.id_documento</td>
                                <td>@doc.tipo_documento</td>
                                <td>@doc.fecha_emision.ToString("dd/MM/yyyy")</td>
                                <td>@doc.fecha_vencimiento.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge badge-@(doc.estado_validacion == "validado" ? "success" :
                                                            doc.estado_validacion == "rechazado" ? "danger" : "warning")">
                                        @doc.estado_validacion
                                    </span>
                                </td>
                                <td>
                                    <span class="badge badge-@estadoAlerta">
                                        @(diasRestantes < 0 ? "Vencido" : diasRestantes + " días")
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(doc.ruta_archivo) || doc.contenido_archivo != null)
                                    {
                                        <a href="#" class="btn btn-sm btn-info">
                                            <i class="fas fa-file-pdf"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No disponible</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#actualizarDocumentoModal"
                                                data-id="@doc.id_documento"
                                                data-tipo="@doc.tipo_documento"
                                                data-emision="@doc.fecha_emision.ToString("yyyy-MM-dd")"
                                                data-vencimiento="@doc.fecha_vencimiento.ToString("yyyy-MM-dd")"
                                                data-estado="@doc.estado_validacion">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No hay documentos registrados para este chofer.
            </div>
        }
    </div>
</div>

<!-- Modal Actualizar Documento -->
<div class="modal fade" id="actualizarDocumentoModal" tabindex="-1" role="dialog" aria-labelledby="actualizarDocumentoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="actualizarDocumentoModalLabel">Actualizar Documento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="@Url.Action("ActualizarDocumentos", "Admin")" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="id_documento" name="id_documento" />
                    <input type="hidden" id="id_chofer" name="id_chofer" value="@ViewBag.IdChofer" />

                    <div class="form-group">
                        <label for="tipo_documento">Tipo de Documento</label>
                        <input type="text" class="form-control" id="tipo_documento" name="tipo_documento" readonly />
                    </div>

                    <div class="form-group">
                        <label for="fecha_emision">Fecha de Emisión</label>
                        <input type="date" class="form-control" id="fecha_emision" name="fecha_emision" required />
                    </div>

                    <div class="form-group">
                        <label for="fecha_vencimiento">Fecha de Vencimiento</label>
                        <input type="date" class="form-control" id="fecha_vencimiento" name="fecha_vencimiento" required />
                    </div>

                    <div class="form-group">
                        <label for="estado_validacion">Estado de Validación</label>
                        <select class="form-control" id="estado_validacion" name="estado_validacion" required>
                            <option value="pendiente">Pendiente</option>
                            <option value="validado">Validado</option>
                            <option value="rechazado">Rechazado</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="archivo">Subir nuevo archivo (opcional)</label>
                        <input type="file" class="form-control-file" id="archivo" name="archivo" accept=".pdf" />
                        <small class="form-text text-muted">Deje en blanco para mantener el archivo actual.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/documentos-chofer.js"></script>
}