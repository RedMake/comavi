@model Choferes
@{
ViewData["Title"] = "Registrar Chofer";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Registrar Chofer</h1>
    <a href="@Url.Action("ListarChoferes", "Admin")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver al Listado
    </a>
</div>
<!-- Mensajes de alerta -->
@if (TempData["Success"] != null)
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>¡Éxito!</strong> @TempData["Success"]
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
}
@if (TempData["Error"] != null)
{
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>¡Error!</strong> @TempData["Error"]
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Datos del Chofer</h6>
    </div>
    <div class="card-body">
        <form method="post" action="@Url.Action("RegistrarChofer", "Admin")">
            @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="nombreCompleto">Nombre Completo *</label>
                    <input asp-for="nombreCompleto" class="form-control" required maxlength="100" />
                    <span asp-validation-for="nombreCompleto" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="numero_cedula">DNI/Cédula *</label>
                    <input asp-for="numero_cedula" class="form-control" required maxlength="20" />
                    <span asp-validation-for="numero_cedula" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="edad">Edad *</label>
                        <input asp-for="edad" type="number" class="form-control" required value=18 min="18" max="99" />
                    <span asp-validation-for="edad" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="licencia">Licencia de Camión *</label>
                    <select asp-for="licencia" class="form-control" required>
                        <option value="">Seleccione...</option>
                        <option value="A-IIIa">A-IIIa (Vehículos hasta 4000kg)</option>
                        <option value="A-IIIb">A-IIIb (Vehículos de transporte público)</option>
                        <option value="A-IIIc">A-IIIc (Vehículos pesados de más de 4000kg)</option>
                    </select>
                    <span asp-validation-for="licencia" class="text-danger"></span>
                    <small class="form-text text-muted">Seleccione la categoría de licencia según el tipo de camión que conduce.</small>
                </div>
                
                <div class="form-group">
                    <label asp-for="fecha_venc_licencia">Fecha Vencimiento Licencia *</label>
                        <input asp-for="fecha_venc_licencia" type="date" class="form-control" required value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="fecha_venc_licencia" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="genero">Género *</label>
                    <select asp-for="genero" class="form-control" required>
                        <option value="">Seleccione...</option>
                        <option value="m">Masculino</option>
                        <option value="f">Femenino</option>
                    </select>
                    <span asp-validation-for="genero" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="id_usuario">Usuario Asociado</label>
                    <select asp-for="id_usuario" class="form-control">
                        <option value="">Sin asociar a usuario</option>
                        @foreach (var usuario in ViewBag.Usuarios)
                        {
                            <option value="@usuario.id_usuario">@usuario.nombre_usuario / (@usuario.correo_electronico)</option>
                        }
                    </select>
                    <span asp-validation-for="id_usuario" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="estado">Estado *</label>
                    <select asp-for="estado" class="form-control" required>
                        <option value="activo">Activo</option>
                        <option value="inactivo">Inactivo</option>
                    </select>
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Guardar Chofer</button>
            <a href="@Url.Action("ListarChoferes", "Admin")" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
</div>
@section Scripts {
    <script src="~/js/chofer.js"></script>
}